<h3><%= @tweet.owner.name %></h3>
<h4><%= '@' + @tweet.owner.username %></h4>
<p><%= @tweet.body %>
<p><%= 'likes: ' + @tweet.likers.count.to_s %>
<p><%= @tweet.created_at.strftime("%B %d, %Y")%>
<%= button_to 'Like', like_tweet_path(@tweet), method: :post %>

<%if user_signed_in?%>
    <h4>Add comments<h4>
    <%= form_for([@tweet, @tweet.comments.build]) do |f|%>
        <%= f.text_area :body %>
        <%= f.hidden_field :user_id, :value => current_user.id %> 
        <%= f.submit %>
    <% end %>
<% end %>
<% @tweet.comments.each do |comment| %>
    <% if !comment.user.nil? %>
    <p><%= comment.user.name %><p>
    <p><%= '@' + comment.user.username %><p>
    <p><%= comment.created_at.strftime("%B %d, %Y")%>
    <%= image_tag(comment.user.avatar) if comment.user.avatar.attached? %>
    <p><%= comment.body %><p>
    <%end%>
<% end %>
